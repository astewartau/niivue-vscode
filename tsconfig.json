{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM",
		],
		"sourceMap": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"typeRoots": [
			"./types",
			"./node_modules/@types",
		],
	},
	"include": [
		"types.d.ts",
		"src/**/*",
		"niivue/**/*",
	],
	"exclude": ["node_modules", "dist"]
}
